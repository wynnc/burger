<div class="row">
  <div class="col-md-12 centerInfo">
    <h1>Burgers!</h1>
  </div>
</div>


<div class="row">
  <div class="col-md-8">
    <h2>Burgers that are not devoured!</h2>

    <ol>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ol>
    <!-- This is column 1 of 3 -->
  </div>



  <div class="col-md-4">
    <h2>Burgers that are devoured!</h2>

    <ol>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-md-12 centerInfo">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
      </div>


      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>